@model IEnumerable<PayrollManagementSystem.Models.Tax>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaxYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxableIncome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaxYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxableIncome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TaxID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TaxID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TaxID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
